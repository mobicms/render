{
    "name": "mobicms/render",
    "description": "Native PHP template engine",
    "type": "library",
    "homepage": "https://github.com/mobicms/render",
    "license": "MIT",
    "keywords": [
        "mobicms",
        "render",
        "templating",
        "templates",
        "views"
    ],
    "authors": [
        {
            "name": "Jonathan Reinink",
            "email": "jonathan@reinink.ca",
            "role": "Developer"
        },
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/render/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.3",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.15",
        "psalm/plugin-phpunit": "^0.12.1"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\Render\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MobicmsTest\\Render\\": "tests/unit"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm --show-info=true",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
