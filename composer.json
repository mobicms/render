{
    "name": "mobicms/render",
    "description": "Native PHP template engine",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mobicms",
        "render",
        "templating",
        "templates",
        "views"
    ],
    "authors": [
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/render/graphs/contributors"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "~8.2 || ~8.3 || ~8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "slevomat/coding-standard": "^8.15",
        "squizlabs/php_codesniffer": "^3.11",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\Render\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/stubs/constants.php"
        ],
        "psr-4": {
            "MobicmsTest\\Stubs\\": "tests/stubs/src"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --no-diff --show-info=true",
        "test": "pest --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "pest --colors=always --coverage --coverage-clover clover.xml --log-junit report.xml"
        ]
    }
}
