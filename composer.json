{
    "name": "mobicms/render",
    "description": "Native PHP template engine",
    "type": "library",
    "homepage": "https://github.com/mobicms/render",
    "license": "MIT",
    "keywords": [
        "mobicms",
        "render",
        "templating",
        "templates",
        "views"
    ],
    "authors": [
        {
            "name": "Jonathan Reinink",
            "email": "jonathan@reinink.ca",
            "role": "Developer"
        },
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/render/graphs/contributors"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.15",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.12"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\Render\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/stubs/constants.php"
        ],
        "psr-4": {
            "MobicmsTest\\Render\\": "tests/unit"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --show-info=true",
        "test": "phpunit --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --colors=always --coverage-clover clover.xml"
        ]
    }
}
