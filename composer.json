{
    "name": "mobicms/render",
    "description": "Native PHP template engine",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mobicms",
        "render",
        "templating",
        "templates",
        "views"
    ],
    "authors": [
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/render/graphs/contributors"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.2"
        }
    },
    "require": {
        "php": "~8.2 || ~8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "slevomat/coding-standard": "^8.15",
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\Render\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/stubs/constants.php"
        ],
        "psr-4": {
            "MobicmsTest\\Render\\": "tests/unit"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "phpstan analyse",
        "test": "phpunit --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --colors=always --coverage-clover clover.xml --log-junit report.xml"
        ]
    }
}
